<div class="d-flex align-items-center">
  <h1>ユーザー一覧</h1>
</div>
<table class="table table-hover table-sm">
  <thead class="table-dark">
    <tr>
      <th>店舗ID</th>
      <th>事業者名</th>
      <th>店舗名</th>
      <th>店舗TEL</th>
      <th>店舗MAIL</th>
      <th>代理店ID</th>
      <th>代理店担当者名</th>
      <th>申込日</th>
      <th>進捗ステータス</th>
      <th>決済ステータス</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
    <tr>
      <td><%= company.id %></td>
      <td><%= company.company_type %><%= company.corp_name %></td>
      <td><%= company.stores.map(&:store_name)[0] %></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td><%= company.created_at.to_s(:datetime_jp_Ymd) %></td>
      <td><%= render partial: 'progress_form' %></td>
      <td><%= render partial: 'settlement_form' %></td>
      <td><%= link_to '詳細', edit_store_path(company.id), class: 'btn btn-outline-dark' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
